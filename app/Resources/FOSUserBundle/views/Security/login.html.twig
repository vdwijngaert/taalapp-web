{% extends "FOSUserBundle::layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
     {% stylesheets '../app/Resources/public/css/login.css' filter="cssrewrite"%}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">Ga verder door in te loggen</h1>
        <div class="account-wall">
            <!--<img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                 alt="">-->
            <img class="profile-img" src="/bundles/app/images/mijntaal.png">
            <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans|trim(':') }}" class="form-control" required autofocus/>
                <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" placeholder="{{ 'security.login.password'|trans|trim(':') }}" class="form-control" required="required" />
                <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block">{{ 'security.login.submit'|trans }}</button>

                <label class="checkbox pull-left">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans }}
                </label>
                <a href="#" class="pull-right need-help">{{ 'registration.submit'|trans }}</a><span class="clearfix"></span>
            </form>
        </div>
    </div>
</div>
{% endblock fos_user_content %}
